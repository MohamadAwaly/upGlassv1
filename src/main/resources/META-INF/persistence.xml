<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="upglass" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>be.atc.upglass.entities.User</class>
        <class>be.atc.upglass.entities.Role</class>
        <class>be.atc.upglass.entities.Permission</class>
        <class>be.atc.upglass.entities.RolePermission</class>
        <class>be.atc.upglass.entities.PaymentMethod</class>
        <class>be.atc.upglass.entities.Team</class>
        <class>be.atc.upglass.entities.Address</class>
        <class>be.atc.upglass.entities.City</class>
        <class>be.atc.upglass.entities.Country</class>
        <class>be.atc.upglass.entities.AddressUser</class>
        <class>be.atc.upglass.entities.Order</class>
        <class>be.atc.upglass.entities.AppointmentHistory</class>
        <class>be.atc.upglass.entities.Appointment</class>
        <class>be.atc.upglass.entities.DocumentsType</class>
        <class>be.atc.upglass.entities.BillingDocument</class>
        <class>be.atc.upglass.entities.Car</class>
        <class>be.atc.upglass.entities.Model</class>
        <class>be.atc.upglass.entities.Brand</class>
        <class>be.atc.upglass.entities.BodyShellType</class>
        <class>be.atc.upglass.entities.Window</class>
        <class>be.atc.upglass.entities.WindowOptionWindow</class>
        <class>be.atc.upglass.entities.OptionsWindow</class>
        <class>be.atc.upglass.entities.WindowsType</class>
        <class>be.atc.upglass.entities.WindowOrder</class>
        <class>be.atc.upglass.entities.BillingDocumentWindow</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/upglass"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>

            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>
    </persistence-unit>

</persistence>
